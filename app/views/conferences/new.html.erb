<% provide(:title, "New conference") %>
<div class="row">
	<div class="col-md-7">
		<div class="panel panel-success">
			<div class="panel-heading">New conference</div>
			<div class="panel-body">
				<%= form_for @conference, :html => {:class => 'form-horizontal'} do |f| %>
					<fieldset>
						<div class="form-group required">
							<%= f.label :name, "Conference name", class: "col-sm-3 control-label required" %>
							<div class="col-sm-5">
									<%= f.text_field :name, class: "form-control", autofocus:"true", required: "true" %>
							</div>
						</div>
						<div class="form-group  required">
							<%= f.label :deadline, "Deadline", class: "col-sm-3 control-label" %>
							<div class="col-sm-5">
									<%= f.date_field :deadline, class: "form-control" %>
							</div>
						</div>
						<div class="form-group required">
							<%= f.label :announcement, "Announcement", class: "col-sm-3 control-label" %>
							<div class="col-sm-5">
									<%= f.text_area :announcement, class: "form-control" %>
							</div>
		      	</div>
		      	<div class="form-group">
							<div class="col-sm-offset-3 col-sm-3">
									<%= f.submit "Submit", class: "btn btn-lg btn-success" %>
							</div>
						</div>
					</fieldset>
				<% end %>
			</div>
		</div>
	</div>
</div>
