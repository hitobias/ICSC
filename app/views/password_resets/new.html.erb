<% provide(:title, "Forgot password") %>
<div class="row">
	<div class="col-md-5 col-md-offset-4" id="forget-password-panel">
		<div class="panel panel-success">
			<div class="panel-heading">Forget Password</div>
			<div class="panel-body">
				<%= form_for :password_reset, url: password_resets_path do |f| %>
					<div class="form-group">
						<%= f.label :email, "Email" %>
						<%= f.text_field :email, class: "form-control", autofocus:"true", tabindex:"1", autocapitalize:"off", required: "true", placeholder: "Please enter your email address" %>
					</div>
					<div class="form-group">
						<%= f.submit "Submit", class: "btn btn-lg btn-success", tabindex:"2" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
