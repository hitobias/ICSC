<% provide(:title, "Register new account") %>
<div class="row">
	<div class="col-md-7">
		<div class="panel panel-success">
			<div class="panel-heading">Registration From</div>
			<div class="panel-body">
				<%= form_for :session, url: login_path, :html => {:class => 'form-horizontal'} do |f| %>
					<div class="form-group">
						<%= f.label :username, "Username", class: "col-sm-3 control-label" %>
						<div class="col-sm-8">
							<%= f.text_field :username, class: "form-control", placeholder: "ex: icsc2015", required: "true" %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :password, "Password", class: "col-sm-3 control-label", required: "true" %>
						<div class="col-sm-8">
								<%= f.password_field :password, class: "form-control", placeholder: "Minimum length is 6", required: "true" %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-3 col-sm-3">
								<%= f.submit "Log in", class: "btn btn-lg btn-success" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

