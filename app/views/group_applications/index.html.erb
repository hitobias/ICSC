<% provide(:title, "Sign in") %>
<div class="row" id="application-panel">
	<div class="col-md-4 col-md-offset-1" id="group-application-panel">
		<div class="panel panel-success">
			<div class="panel-heading">Upload excel files</div>
			<div class="panel-body">
				<%= form_for :group_applications, url: group_applications_new_path do |f| %>
					<div class="form-group">
						<%= f.label :group_files, "請選擇你要上傳的文件", class: "control-label" %>
						<%= f.file_field :group_files, class: "form-control", tabindex:"1" %>
					</div>
					<div class="form-group">
						<%= f.submit "Submit", class: "btn  btn-success", tabindex:"3" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-1" id="applications-divider"></div>
	<div class="col-md-4 col-md-offset-1" id="single-application-panel">
	<div class="panel panel-success">
			<div class="panel-heading">Single application</div>
			<div class="panel-body">
				<%= link_to "單個人位報名", new_member_path, class:"btn  btn-warning", id: "new-member-link", remote: true %>
			</div>
		</div>
	</div>
</div>


